{% extends 'base.html.twig' %}

{% block title %}
	edit product
{% endblock %}

{% form_theme form with [
	'bootstrap_4_horizontal_layout.html.twig',
	'product/_form_theme.html.twig'
	] %}

{% block body %}
	<div class="container-md mt-5">
		<h1 class="mb-3">
			Modifier le produit :
			{{ product.name}}</h1>

		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary" {#formnovalidate#}>Enregistrer les modifications</button>

		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="/js/product/form_theme.js"></script>
{% endblock %}
