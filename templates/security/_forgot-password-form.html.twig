

<div class="modal fade " id="forgotPasswordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-show-forgot-password-modal="{{ showForgotPasswordModal}}">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				{% for flashError in app.flashes('reset_password_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}
				<h3 class="text-center">MOT DE PASSE OUBLIÉ ?</h3>
				<div class="text-center mb-3">
					<small>
						Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				{{ form_start(requestForm,{'action': path('app_forgot_password_request'), 'method': 'POST' ,'attr':{'class':'securityForm'}}) }}
				{{ form_row(requestForm.email) }}
				<button type="submit" class="btn btn-dark rounded-0  text-uppercase" formnovalidate>Envoyer</button>
				{{ form_end(requestForm) }}

			</div>
		</div>
	</div>
</div>


