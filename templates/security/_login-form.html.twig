
<div id="login-form" class="{{ login ? '' : 'd-none'}}">
	<form method="post" action="{{ path('login') }}" class="securityForm">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="form-group">
			<label for="inputEmail" class="small">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-0" placeholder="* Votre email..." required autofocus />
		</div>
		<div class="form-group">
			<label for="inputPassword" class="small">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control rounded-0" placeholder="* Votre mot de passe..." autocomplete="off" required />
		</div>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<div class="checkbox mb-3">
			<label class="small">
				<input type="checkbox" name="_remember_me" class="">
				Se souvenir de moi
			</label>
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-dark btn-block rounded-0 mt-3 text-uppercase" {#formnovalidate#}>Se connecter !</button>
		</div>
	</form>
     <div class="text-center mt-4">
		 <a href="#forgotPasswordModal" data-toggle="modal" class="text-dark font-weight-bold small" >Mot de passe oubli√© ?</a>
	 </div>
</div>
