{% if app.user %}
	<div style="min-height:40vh">
		<div class=" text-center alert alert-warning">
			<div>
				Vous êtes connecté en tant que :
				<span class="font-weight-bold ">
					{{ app.user.username }}
				</span>
			</div>
			<div class="text-center mt-3">
				<a href="{{ path('logout') }}" class="">Se déconnecter</a>
			</div>
		</div>

	</div>
{% else %}
	<div class="row">
		<div class="col-md-6 col-lg-5 col-sm-8 mx-auto">
			<div class="d-flex justify-content-center my-4">
				<div id="se-connecter" role="button" data-href="{{ url('login') }}" class="px-3 py-2 mx-1 {{ login ? 'active' : ''}}">Se connecter</div>
				<div id="inscrivez-vous" role="button" data-href="{{ url('register') }}" class="px-3 py-2 mx-1 {{ register ? 'active' : ''}}">Inscrivez-vous</div>
			</div>
			{% include 'security/_login-form.html.twig' %}
			{% include 'security/_register-form.html.twig' %}
			{% include 'security/_forgot-password-form.html.twig' %}

		</div>
	</div>
{% endif %}
